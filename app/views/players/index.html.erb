<h1>UNO Points Helper</h1>
<p>Play UNO in formal Way!</p>

<div class="player-list">
  <p>プレイヤー設定</p>
  <%= @players.each do |player| %>
    <span><%= player.name %></span>
    <span><%= player.points %></span>
    <p></p>
  <% end %>
</div>

<div class="create-players">
  <%= form_with(model: @player, method: :get) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :points %>
    <%= f.number_field :points %>

    <%= f.submit "追加する", class: "btn btn-primary" %>
  <% end %>
</div>

<%= link_to "Start Game", playing_path %>